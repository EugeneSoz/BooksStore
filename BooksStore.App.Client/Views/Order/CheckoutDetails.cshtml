@model Customer

@{
    Layout = "_StoreLayout";
}

<div id="store-content">
    <partial name="EmptyStoreToolbar" />
    <div id="store-scrollable-content">
        <div class="card m-2">
            <div class="card-body">
                <h2 class="text-center mt-1">Шаг 1: Оформление заказа</h2>

                <form asp-action="ShowCheckoutDetails" method="post">
                    <div class="form-group">
                        <label>Ваше имя</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Адрес доставки</label>
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Область</label>
                        <input asp-for="State" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Индекс</label>
                        <input asp-for="ZipCode" class="form-control" />
                    </div>
                    <div class="text-center mt-2">
                        <a asp-controller="Cart" asp-action="AddToCart" class="btn btn-outline-primary">
                            Назад
                        </a>
                        <button type="submit" class="btn btn-success ml-2">
                            Далее
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>