@model Payment

@{
    Layout = "_StoreLayout";
}

<div id="store-content">
    <partial name="EmptyStoreToolbar" />
    <div id="store-scrollable-content">
        <div class="card m-2">
            <div class="card-body">
                <h2 class="text-center mt-1">Шаг 2: Оплата</h2>

                <form asp-action="ShowCheckoutPayment" method="post">
                    <div class="form-group">
                        <label>Номер банковской карты</label>
                        <input asp-for="CardNumber" class="form-control" maxlength="19" />
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Укажите срок действий карты</label>
                            <input asp-for="CardExpiry" class="form-control" maxlength="5" />
                        </div>
                        <div class="form-group col-md-6">
                            <label>Код безопасности карты</label>
                            <input asp-for="CardSecurityCode" class="form-control" maxlength="3" />
                        </div>
                    </div>
                    <div class="text-center mt-2">
                        <a asp-controller="Order" asp-action="ShowCheckoutDetails" class="btn btn-outline-primary">
                            Назад
                        </a>
                        <button type="submit" class="btn btn-success ml-2">
                            Далее
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


