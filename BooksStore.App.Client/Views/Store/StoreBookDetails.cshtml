@model BookResponse

@{
    Layout = "_StoreLayout";
}

<div id="store-content">
    <partial name="EmptyStoreToolbar" />
    <div id="store-scrollable-content">
        @if (Model != null)
        {
            <div class="card m-3">
                <div class="card-body">
                    <div class="row no-gutters">
                        <div class="col-lg-auto">
                            <img src="" alt="Обложка книги" width="420" height="600" />
                        </div>
                        <div class="col-lg">
                            <h3>@Model.Title</h3>
                            <div class="row">
                                <div class="col-lg">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td>Автор(ы)</td>
                                                <td>@Model.Authors</td>
                                            </tr>
                                            <tr>
                                                <td>Количество страниц</td>
                                                <td>@Model.PageCount</td>
                                            </tr>
                                            <tr>
                                                <td>Год выпуска</td>
                                                <td>@Model.Year</td>
                                            </tr>
                                            <tr>
                                                <td>Категория</td>
                                                <td>@Model.CategoryName</td>
                                            </tr>

                                            <tr>
                                                <td>Издательство</td>
                                                <td>@Model.PublisherName</td>
                                            </tr>
                                            <tr>
                                                <td>Язык издания</td>
                                                <td>@Model.Language</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-lg-auto">
                                    <div class="card border-primary">
                                        <div class="card-body">
                                            <h3 class="card-title">@Model.RetailPrice</h3>
                                            <h6 class="card-subtitle text-center text-muted">В наличии</h6>
                                        </div>
                                        <div class="card-footer text-center">
                                            <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
                                                <input type="hidden" asp-for="Id" />
                                                <input type="hidden" name="returnUrl"
                                                       value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                                                <div class="row no-gutters">
                                                    <div class="col-lg-6">
                                                        <button style="width: 8rem;" type="submit" class="btn btn-success">
                                                            В корзину
                                                        </button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg">
                                    <a asp-controller="Store" asp-action="ShowBooks" class="btn btn-info">
                                        К списку книг
                                    </a>
                                </div>
                            </div>

                            <div class="row mt-lg-5">
                                <div class="col-lg">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }

        @if (Model == null)
        {
            <h4>О данной книге информация отсутствует</h4>
        }
    </div>
</div>