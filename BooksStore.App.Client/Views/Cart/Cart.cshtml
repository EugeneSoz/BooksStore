@model CartViewModel

@{
    Layout = "_StoreLayout";
}

<div id="store-content">
    <partial name="EmptyStoreToolbar" />
<div id="store-scrollable-content">
    <div class="card m-2">
        <div class="card-body">
            <h2 class="text-center">Ваша корзина</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Количество</th>
                        <th>Товар</th>
                        <th class="text-right">Цена</th>
                        <th class="text-right">Всего за товар</th>
                        <th class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Lines == null)
                {
                    <tr>
                        <td colspan="5" class="text-center">
                            Ваша корзина пуста
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var line in Model.Lines)
                    {
                        <tr>
                            <td>
                                <input type="number" class="form-control-sm" style="width: 5em"
                                       min="0" value="@line.Quantity"/>
                            </td>
                            <td>@line.ItemName</td>
                            <td class="text-right">
                                @line.Price
                            </td>
                            <td class="text-right">
                                @(line.Quantity * line.Price)
                            </td>
                            <td class="text-center" style="width: 5em">
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="BookId"
                                           value="@line.BookId" />
                                    <input type="hidden" name="returnUrl"
                                           value="@Model.ReturnUrl" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>

                    }
                }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right font-weight-bold">Всего:</td>
                        <td class="text-right font-weight-bold">
                            @Model.TotalLineSum
                        </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <div class="text-center">
                <a href="@Model.ReturnUrl" class="btn btn-primary">Продолжить покупки</a>
                <a href="@AppNavLink.Confirmation" class="btn btn-secondary ml-2">
                    Оплатить заказ
                </a>
            </div>
        </div>
    </div>

</div>
    </div>